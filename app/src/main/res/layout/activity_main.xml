<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center">
            <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Lembre-se:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textSize="13sp"/>
            <TextView
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text=" É sempre mais inteligente buscar um profissional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </TableRow>

    </TableLayout>

    <TextView
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:text="@string/qual_o_seu_peso_kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

    <EditText android:layout_width="219dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center" android:inputType="numberDecimal" android:id="@+id/peso"
              android:textSize="10sp"/>

    <TextView
            android:textColor="@color/black"
            android:text="@string/qual_sua_altura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

    <EditText android:layout_width="219dp"
              android:hint="Ex: 174"
              android:layout_height="wrap_content"
              android:layout_gravity="center" android:inputType="numberDecimal" android:id="@+id/altura"
              android:textSize="10sp"/>

    <TextView
            android:textColor="@color/black"
            android:text="Sua idade:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

    <EditText android:layout_width="219dp"
              android:hint="Ex: 18"
              android:layout_height="wrap_content"
              android:layout_gravity="center" android:inputType="numberDecimal" android:id="@+id/idade"
              android:textSize="10sp"/>


    <TextView
            android:textColor="@color/black"
            android:text="Objetivo:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

    <RadioGroup
            android:layout_width="146dp"
            android:layout_height="97dp"
            android:layout_gravity="center"
    >
        <RadioButton
                android:layout_gravity="center"
                android:text="Manter massa"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="72dp" android:id="@+id/Manter" android:layout_weight="1"/>
        <RadioButton
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Perder massa"
                android:layout_width="match_parent"
                android:layout_height="72dp" android:id="@+id/Perder" android:layout_weight="1"/>
        <RadioButton
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Ganhar massa"
                android:layout_width="match_parent"
                android:layout_height="72dp" android:id="@+id/resistencia" android:layout_weight="1"/>
    </RadioGroup>

    <TextView
            android:textColor="@color/black"
            android:text="Seu sexo:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

    <RadioGroup
            android:layout_width="146dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
    >
        <RadioButton
                android:layout_gravity="center"
                android:text="Masculino"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="72dp" android:id="@+id/Masculino" android:layout_weight="1"/>
        <RadioButton
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Feminino"
                android:layout_width="match_parent"
                android:layout_height="72dp" android:id="@+id/Feminino" android:layout_weight="1"/>
    </RadioGroup>

    <TextView
            android:textColor="@color/black"
            android:text="Nível de Atividade/Tipos de atividade que você pratica:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

    <RadioGroup

            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:layout_gravity="center"
    >
        <RadioButton
                android:layout_gravity="center"
                android:text="Sedentário"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="72dp" android:id="@+id/Sedentario" android:layout_weight="1"/>
        <RadioButton
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Leve(1-3Dias/Semana)"
                android:layout_width="match_parent"
                android:layout_height="72dp" android:id="@+id/atletaInfrequente" android:layout_weight="1"/>
        <RadioButton
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Moderado(3-5Dias/Semana)"
                android:layout_width="match_parent"
                android:layout_height="72dp" android:id="@+id/resistenciaa" android:layout_weight="1"/>
        <RadioButton
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Intenso(6-7Dias/Semana)"
                android:layout_width="match_parent"
                android:layout_height="72dp" android:id="@+id/Esportes" android:layout_weight="1"/>

    </RadioGroup>


    <Button android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CALCULAR" android:id="@+id/btn"/>


</LinearLayout>

